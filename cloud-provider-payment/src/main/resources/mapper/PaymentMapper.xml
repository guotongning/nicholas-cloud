<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ning.springcloud.dao.PaymentDao">

    <insert id="create" parameterType="com.ning.springcloud.entities.dao.Payment" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO `nicholas-cloud`.`payment`
            (`serial`)
        VALUES (#{serial});
    </insert>

    <resultMap id="BaseResultMap" type="com.ning.springcloud.entities.dao.Payment">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <id column="serial" property="serial" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getPaymentById" resultType="com.ning.springcloud.entities.dao.Payment" resultMap="BaseResultMap">
        SELECT `id`,`serial`
        FROM payment
        WHERE id = #{id}
    </select>
</mapper>